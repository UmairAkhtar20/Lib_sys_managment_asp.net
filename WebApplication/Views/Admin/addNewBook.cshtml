
@{
    ViewBag.Title = "addNewBook";
    Layout = "~/Views/Shared/_layoutforadmin.cshtml";
}
@section scripts
{

    <script>

        $(function () {

            $(".btt").on("click", function () {


                var name = $(".txtname").val();
                var authorname = $(".txtauthorname").val();
                var isbn = $(".txtisbn").val();
                var category = $(".txtcategory").val();
                var publish = $(".txtpublish").val();
                var d = { "name": name, "author": authorname, "isbn": isbn, "category": category, "publish": publish };
                var settings = {
                    type: "post",
                    datatype: "json",
                    data: d,
                    url: "/Admin/addbook",
                    success: function (resp) {
                        alert("Book Saved");
                    },
                    error: function (e) {
                        alert("error");
                    }

                };
                $.ajax(settings);
            });



        });


    </script>



    }

    <div class="container">

        <div class="form-group">
            <label style="color:white;" class="col-md-4 control-label"> Name</label>
            <div class="col-md-4 inputGroupContainer">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    <input name="first_name" class="form-control txtname" type="text">
                </div>
            </div>
        </div>


        <div class="form-group">
            <label style="color:white;" class="col-md-4 control-label">Author Name</label>
            <div class="col-md-4 inputGroupContainer">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                    <input name="last_name" class="form-control txtauthorname" type="text">
                </div>
            </div>
        </div>


        <div class="form-group">
            <label style="color:white;" class="col-md-4 control-label">ISBN Number</label>
            <div class="col-md-4 inputGroupContainer">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                    <input name="email" class="form-control txtisbn" type="text">
                </div>
            </div>
        </div>




        <div class="form-group">
            <label style="color:white;" class="col-md-4 control-label">Category</label>
            <div class="col-md-4 inputGroupContainer">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-earphone"></i></span>
                    <input name="phone" class="form-control txtcategory" type="text">
                </div>
            </div>
        </div>


        <div class="form-group">
            <label style="color:white;" class="col-md-4 control-label">Publish Date</label>
            <div class="col-md-4 inputGroupContainer">
                <div class="input-group">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-home"></i></span>
                    <input name="cnic" class="form-control txtpublish" type="text">
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-4 control-label"></label>
            <div class="col-md-4">
                <button type="submit" class="btn btn-danger btt  ">Save <span class="glyphicon glyphicon-send"></span></button>
            </div>
        </div>


    </div>

